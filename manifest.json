{
    "name": "block-malicious",
    "version": "1.0",
    "description": "Block malicious sites",
    "permissions": [
        "tabs",
        "alarms",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "notifications",
        "unlimitedStorage"],
