{
    "name": "BeSafe",
    "version": "1.0",
    "description": "Block malicious websites",
    "permissions": [
        "alarms",
        "webRequest",
        "unlimitedStorage",
        "storage"
        ],
    "host_permissions": [
         "*://*/*"
      ],
    "background": {
        "service_worker": "src/js/index.js",
        "type": "module"
    },
    "action": {
        "default_icon": "imgs/icon.png",
        "default_popup": "src/popup.html"
    },
    "manifest_version": 4
}
